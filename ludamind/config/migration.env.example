# ╔══════════════════════════════════════════════════════════════════════╗
# ║                    MIGRATION CONFIGURATION                              ║
# ║         Add these variables to your .env file                          ║
# ╚══════════════════════════════════════════════════════════════════════╝

# ============================================================================
# ARCHITECTURE MODE CONFIGURATION
# ============================================================================

# Architecture mode: legacy | transitional | clean
# - legacy: Original Flask monolith only
# - transitional: Both Flask and FastAPI running with adapter
# - clean: Pure FastAPI with Clean Architecture
ARCHITECTURE_MODE=transitional

# Environment: development | staging | production
ENVIRONMENT=development

# ============================================================================
# BOOTSTRAP CONFIGURATION (Clean Architecture)
# ============================================================================

# Enable health checks for all services
ENABLE_HEALTH_CHECKS=true

# Enable metrics collection
ENABLE_METRICS=true

# Enable cache warming on startup (set to false for faster startup)
ENABLE_CACHE_WARMING=false

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# FLASK CONFIGURATION (Legacy/Transitional)
# ============================================================================

# Flask server configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# ============================================================================
# FASTAPI CONFIGURATION (Transitional/Clean)
# ============================================================================

# FastAPI server configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Number of worker processes (for production)
FASTAPI_WORKERS=1

# ============================================================================
# MIGRATION CONFIGURATION (Transitional Mode)
# ============================================================================

# Enable proxy from Flask to FastAPI
MIGRATION_PROXY_ENABLED=true

# Routes to migrate (comma-separated)
# Example: /api/v1/queries,/api/v1/conversations,/health
MIGRATION_ROUTES=/api/v1/queries,/api/v1/conversations,/api/v1/health

# Migration monitoring
MIGRATION_LOG_REQUESTS=true
MIGRATION_LOG_PERFORMANCE=true

# ============================================================================
# SERVICE DISCOVERY
# ============================================================================

# Service URLs (for inter-service communication)
FLASK_SERVICE_URL=http://localhost:5000
FASTAPI_SERVICE_URL=http://localhost:8000
