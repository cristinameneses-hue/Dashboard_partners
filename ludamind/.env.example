# ============================================================================
# LudaMind Environment Variables (.env.example)
# ============================================================================
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to version control
# ============================================================================

# ============================================================================
# MySQL Connection (TrendsPro)
# ============================================================================
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_USER=your_mysql_user
MYSQL_PASS=your_mysql_password
MYSQL_DB=trends

# Write Operation Permissions (default to false for safety)
ALLOW_INSERT_OPERATION=false
ALLOW_UPDATE_OPERATION=false
ALLOW_DELETE_OPERATION=false
ALLOW_DDL_OPERATION=false

# SSL Configuration
MYSQL_SSL=false
MYSQL_SSL_REJECT_UNAUTHORIZED=true

# Performance Settings
MYSQL_POOL_SIZE=10
MYSQL_QUERY_TIMEOUT=30000
MYSQL_CACHE_TTL=60000

# Security Settings
MYSQL_RATE_LIMIT=100
MYSQL_MAX_QUERY_COMPLEXITY=1000

# ============================================================================
# OpenAI API Configuration
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# ============================================================================
# Google OAuth Configuration
# ============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Flask Session Secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your-flask-secret-key-64-chars-minimum

# Allowed Email Domain (without @)
ALLOWED_EMAIL_DOMAIN=ludapartners.com

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-key-64-chars-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# ============================================================================
# MongoDB Connection (LudaFarma-PRO)
# ============================================================================
MONGO_LUDAFARMA_URL=mongodb://user:password@localhost:27017/LudaFarma-PRO?readPreference=primary&directConnection=true&ssl=false
MONGO_LUDAFARMA_CAN_INSERT=false
MONGO_LUDAFARMA_CAN_UPDATE=false
MONGO_LUDAFARMA_CAN_DELETE=false
MONGO_LUDAFARMA_CAN_DDL=false
MONGO_LUDAFARMA_IS_DEFAULT=true

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:5173,https://dashboard.ludapartners.com

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_PERIOD=minute
