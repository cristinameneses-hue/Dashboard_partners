# ============================================================================
# TrendsPro - Configuration Template
# ============================================================================
# INSTRUCTIONS: Copy this file to .env and fill in your credentials
# WARNING: Never commit the .env file to git!
# ============================================================================

# ============================================================================
# MySQL Database Configuration
# ============================================================================
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3307
MYSQL_USER=your_mysql_user
MYSQL_PASS=your_mysql_password
MYSQL_DB=your_database

# Opcional: Usar socket Unix (más rápido en localhost)
# MYSQL_SOCKET_PATH=/tmp/mysql.sock

# SSL/TLS
MYSQL_SSL=false
MYSQL_SSL_REJECT_UNAUTHORIZED=true

# ============================================================================
# Write Operation Permissions (Security)
# ============================================================================
# IMPORTANTE: Todas deshabilitadas por defecto para seguridad
# Solo habilitar si realmente necesitas modificar datos
#
ALLOW_INSERT_OPERATION=false
ALLOW_UPDATE_OPERATION=false
ALLOW_DELETE_OPERATION=false
ALLOW_DDL_OPERATION=false

# ============================================================================
# Schema-Specific Permissions (Advanced)
# ============================================================================
# Formato: "schema1:true,schema2:false"
# SCHEMA_INSERT_PERMISSIONS=test_db:true,staging_db:false
# SCHEMA_UPDATE_PERMISSIONS=test_db:true,staging_db:false
# SCHEMA_DELETE_PERMISSIONS=test_db:false,staging_db:false
# SCHEMA_DDL_PERMISSIONS=test_db:true,staging_db:false

# Multi-DB Write Mode
MULTI_DB_WRITE_MODE=false

# ============================================================================
# OpenAI API Configuration
# ============================================================================
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Modelo a usar
# Opciones:
#   - gpt-4o: Recomendado para producción (mejor calidad, ~2x más caro que mini)
#   - gpt-4o-mini: Bueno para desarrollo (más barato pero menos preciso)
#   - o1-preview: Máxima calidad pero muy caro y lento
OPENAI_MODEL=gpt-4o

# Temperatura (0.0-1.0, menor = más determinista)
OPENAI_TEMPERATURE=0.1

# Máximo de tokens en respuesta
OPENAI_MAX_TOKENS=2000
